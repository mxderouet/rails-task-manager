<h1>Edit Task</h1>
<%= form_for(@task) do |t| %>
  <div class="form-group" method="post">
    <%= t.label :title %>
    <%= t.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= t.label :details %>
    <%= t.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= t.label :completed%>
    <%= t.check_box :completed, class: 'checkbox'%>
  </div>
  <%= t.submit class: 'btn btn-primary' %>
<% end %>
<br>

<%= link_to "Back to Tasklist", tasks_path %>